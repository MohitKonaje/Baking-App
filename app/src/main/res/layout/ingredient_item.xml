<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/ingredient_item_container"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/card_background_color"
    android:orientation="horizontal">

    <TextView
        android:id="@+id/ingredient_item_name_text_view"
        android:layout_width="180dp"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        android:textAppearance="@style/TextAppearance.AppCompat.Display1"
        android:textColor="@color/card_text_color"
        android:textSize="14sp"
        android:textStyle="bold"
        android:typeface="normal"
        tools:text="melted and cooled bittersweet or semisweet chocolate" />

    <TextView
        android:id="@+id/ingredient_item_quantity_text_view"
        android:layout_width="40dp"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        android:textAppearance="@style/TextAppearance.AppCompat.Display1"
        android:textColor="#ffffff"
        android:textSize="14sp"
        android:textStyle="bold"
        tools:text="22.2" />

    <TextView
        android:id="@+id/ingredient_item_measure_text_view"
        android:layout_width="80dp"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        android:textAppearance="@style/TextAppearance.AppCompat.Display1"
        android:textColor="#ffffff"
        android:textSize="14sp"
        android:textStyle="bold"
        tools:text="@string/ingredient_measure_place_holder" />

</LinearLayout>

